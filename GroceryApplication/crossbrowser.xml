<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="crossbrowser">
  <test thread-count="5" name="ChromeTest">
  <parameter name="browser" value="chrome"></parameter><!-->>tag is used to parameterize browser and should be given inside the test tag-->
    <classes>
      <class name="testscript.HomeTest"/>
      <class name="testscript.AdminTest"/>
      <class name="testscript.NewsTest"/>
      <class name="testscript.LoginTest"/>
    </classes>
  </test> <!-- Test -->
  <test thread-count="5" name="FirefoxTest">
  <parameter name="browser" value="firefox"></parameter>
    <classes>
      <class name="testscript.HomeTest"/>
      <class name="testscript.AdminTest"/>
      <class name="testscript.NewsTest"/>
      <class name="testscript.LoginTest"/>
    </classes>
  </test>
</suite> <!-- Suite -->

